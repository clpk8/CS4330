<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="checkerboard.CheckerboardFXMLController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Grid">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#size16" text="16x16" />
                  <MenuItem mnemonicParsing="false" onAction="#size10" text="10x10" />
                  <MenuItem mnemonicParsing="false" onAction="#size8" text="8x8" />
                  <MenuItem mnemonicParsing="false" onAction="#size3" text="3x3" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Color">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#setDefault" text="Default" />
                  <MenuItem mnemonicParsing="false" onAction="#setBlue" text="Blue" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane fx:id="pane" prefHeight="600.0" prefWidth="600.0" />
   </children>
</VBox>
